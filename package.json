{
  "name": "numblr",
  "version": "0.0.1",
  "description": "Tumblr gallery",
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf dist && npm run build:client && npm run build:server",
    "build:client": "rollup -c rollup.config.js",
    "build:client:watch": "rollup -c rollup.config.js --watch",
    "build:server": "tsc -p tsconfig.json",
    "build:server:watch": "tsc -p tsconfig.json --watch",
    "dev": "nodemon build/index.js",
    "precommit": "lint-staged",
    "start": "node build/index.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "typescript": "^4.4.4",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.0",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.168",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-plugin-tsc": "^2.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "lit-html": "^2.0.1",
    "nodemon": "^2.0.14",
    "pino-pretty": "^5.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zefirka/numblr.git"
  },
  "keywords": [
    "tumblr",
    "tumbview"
  ],
  "author": "Trdat Mkrtchian <wombtromb@gmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/zefirka/numblr/issues"
  },
  "homepage": "https://github.com/zefirka/numblr#readme"
}
